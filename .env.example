# Azure OpenAI Configuration
# Copy this file to .env and fill in your actual credentials

# Azure OpenAI API Key
# Get this from: https://portal.azure.com/ -> Azure OpenAI -> Keys and Endpoint
AZURE_OPENAI_API_KEY=your-api-key-here

# Azure OpenAI Endpoint URL
# Get this from: https://portal.azure.com/ -> Azure OpenAI -> Keys and Endpoint
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/

# Chat Model Deployment Name (e.g., gpt-4o-mini)
AZURE_DEPLOYMENT_NAME=gpt-4o-mini

# Text Embedding Model Deployment Name
AZURE_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-large

# API Version for Chat Model
AZURE_API_VERSION=2025-01-01-preview

# API Version for Embedding Model (may differ from chat)
AZURE_EMBEDDING_API_VERSION=2024-12-01-preview
